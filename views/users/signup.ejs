<% layout("/layouts/boilerplate") %>
<div class="row mt-3">  
    <h1 class="col-6 offset-3 mb-3">SignUp for Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mg-3">
                <label for="username" class="form-label">username</label> 
                 <input type="text"
                   name="username"
                   class="form-control" 
                   id="username"
                   required>
                   <div class="valid-feedback">looks good!</div>
             </div>
             <div class="mg-3">
                <label for="email" class="form-label">email</label> 
                 <input type="email"
                   name="email"
                   class="form-control" 
                   id="email"
                   required>
                   <div class="valid-feedback">looks good!</div>
             </div>
             <div class="mg-3">
                <label for="password" class="form-label">password</label> 
                 <input type="password"
                   name="password"
                   class="form-control" 
                   id="password"
                   required>
                   <div class="valid-feedback">looks good!</div>
             </div>
             <button class="btn btn-dark mt-3">signup</button>
        </form>
    </div>
</div>